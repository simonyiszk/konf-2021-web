{
	"name": "konf-2021-web",
	"private": true,
	"scripts": {
		"build": "next build",
		"build:analyze": "cross-env ANALYZE=true npm run build",
		"clean": "git clean --force -dx --exclude node_modules/ --exclude .env.local --exclude .env.*.local",
		"dev": "next dev",
		"fix": "run-s fix:*",
		"fix:eslint": "npm run lint:eslint -- --fix",
		"fix:prettier": "npm run lint:prettier -- --write",
		"lint": "run-p lint:*",
		"lint:eslint": "eslint --ext .js,.ts,.tsx --ignore-path ./.gitignore .",
		"lint:prettier": "prettier --check --ignore-path ./.gitignore .",
		"lint:typescript": "tsc",
		"start": "next start",
		"cms-typegen": "contentful-typescript-codegen --output src/@types/generated/contentful.d.ts",
		"postinstall": "husky install && shx rm -rf .git/hooks && shx ln -s ../.husky .git/hooks"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*": "prettier --write --ignore-unknown",
		"*.{js,ts,tsx}": "eslint --fix"
	},
	"browserslist": [
		"defaults",
		"not IE 11",
		"maintained node versions"
	],
	"dependencies": {
		"@contentful/rich-text-types": "^14.1.2",
		"@next/bundle-analyzer": "^10.1.2",
		"@tailwindcss/jit": "^0.1.18",
		"autoprefixer": "^10.2.5",
		"babel-plugin-optimize-clsx": "^2.6.1",
		"clsx": "^1.1.1",
		"contentful": "^8.2.1",
		"contentful-management": "^7.13.1",
		"dotenv": "^8.2.0",
		"framer-motion": "3.3.0",
		"next": "^10.1.2",
		"next-compose-plugins": "^2.2.1",
		"next-mdx-remote": "^2.1.3",
		"next-seo": "^4.23.0",
		"postcss": "^8.2.9",
		"postcss-import": "^14.0.1",
		"postcss-preset-env": "^6.7.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-icons": "^4.2.0",
		"react-markdown": "^5.0.3",
		"react-scripts": "^4.0.3",
		"shx": "^0.3.3",
		"tailwindcss": "^2.0.4",
		"tinydate": "^1.3.0",
		"typescript-plugin-css-modules": "^3.2.0"
	},
	"devDependencies": {
		"@next/eslint-plugin-next": "^10.1.2",
		"@types/gtag.js": "^0.0.4",
		"@types/node": "^14.14.37",
		"@types/react": "^17.0.3",
		"@typescript-eslint/eslint-plugin": "^4.20.0",
		"@typescript-eslint/parser": "^4.20.0",
		"contentful-typescript-codegen": "^3.2.2",
		"cross-env": "^7.0.3",
		"eslint": "^7.23.0",
		"eslint-config-airbnb-typescript": "^12.3.1",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-etc": "^1.3.8",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-react": "^7.23.1",
		"eslint-plugin-react-etc": "^1.0.6",
		"eslint-plugin-react-hooks": "^4.2.0",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"husky": "^6.0.0",
		"lint-staged": "^10.5.4",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.2.1",
		"prettier-plugin-tailwind": "^2.2.10",
		"stylelint": "^13.12.0",
		"stylelint-config-hudochenkov": "^5.0.0",
		"stylelint-config-prettier": "^8.0.2",
		"stylelint-config-recommended": "^4.0.0",
		"stylelint-config-recommended-scss": "^4.2.0",
		"stylelint-order": "^4.1.0",
		"stylelint-prettier": "^1.2.0",
		"stylelint-scss": "^3.19.0",
		"typescript": "^4.2.3"
	}
}
